<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="90dp"

    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/importe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#242E65"

            />

        <EditText
            android:id="@+id/txtimporte"
            android:layout_width="183dp"
         android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="  ingrese  Monto"


            />

    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:layout_marginTop="90dp"
        android:id="@+id/txtconvertir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        android:text="@string/convertir"
        android:textStyle="bold"
        android:textColor="#242E65"/>

        <Spinner
            android:id="@+id/spconvertir"
            android:layout_width="222dp"
            android:layout_height="34dp"
            android:layout_marginTop="90dp"
            android:outlineAmbientShadowColor="#3F51B5"
            android:layout_marginHorizontal="30dp"


           />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textview3"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"
            android:text="@string/Resultado"
            android:textColor="#242E65"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtresulset"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="110dp"
            android:text="TextView"
            android:textColor="#050505"
            android:textSize="30sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnsalir"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="115dp"

        android:text="salir"
        android:onClick="salir"
        android:background="@drawable/style_bottom"

        />







</LinearLayout>



